<!-- admin.handlebars -->
<div class="container">
    <div class="row">
        <div class="col-xs-8">
            {{#if success}}
            <h3 class="text-white">Success!</h3>
            <br>
            {{/if}}
            <h1 class="text-white">Midikov Admin</h1>
            <form action="/admin/upload" method="post" enctype="multipart/form-data">
                <div class="text-white">
                    <label for="midis">Choose one or more MIDI files:</label><br>
                    <input type="file" id="midis" name="midis" accept="audio/midi, audio/x-midi" multiple>
                </div>
                <br>
                <div class="text-white">
                    <label for="category">Specify a category:</label><br>
                    <input type="text" id="category" name="category" value="">
                </div>
                <br>
                <div class="text-white">
                    <button class="btn btn-primary" type="submit" name="button">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>
